# ChillConnect Backend Environment Variables - Template
# Copy this file to .env and fill in your actual values

# API Configuration
SECRET_KEY=your-secret-key-here-make-it-long-and-secure
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost/chillconnect

# CORS
ALLOWED_HOSTS=["http://localhost:3000", "https://your-domain.vercel.app"]

# Brevo Email Service (Sign up at brevo.com)
BREVO_API_KEY=your-brevo-api-key-here

# Twilio SMS Service (Sign up at twilio.com)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# PayPal Configuration (Sign up at developer.paypal.com)
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox

# Redis (Set up Redis instance)
REDIS_URL=redis://localhost:6379

# File uploads
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880

# Token economy
TOKEN_VALUE_INR=100
PLATFORM_COMMISSION=0.15